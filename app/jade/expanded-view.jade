.expanded-view
  .stat-row
    .historical-stats
    .live-stats
    .stats
      each stat in stats
        .stat(class = stat.metric)
          .percent #{stat.value}%
          .label #{stat.metric}
  .timeline

  //- 
  .slider-container
    .stats-dropshield

    .modal 
      .close &times;
      .days
      .slide-range
        .slider
          .side.left
          .side.right
