.nanobox-dash-ui-hourly-stats
  .expanded-view
    
    //- 
    .stat-row
      .historical-stats
      .live-stats
      .stats
        each stat in stats
          .stat.color-temp(class = stat.metric)
            .percent #{stat.value}%
            .label #{stat.metric}
    
    //- 
    .timeline

    //- 
    .toggle-slider
      span Date Range
      
    //- 
    .slider-dropshield(style = "display:none;")
    .slider(style = "display:none;")
      .close &times;
      .days
      
      //- 
      .slide-range
        .handle
          .side.left
          .side.right
